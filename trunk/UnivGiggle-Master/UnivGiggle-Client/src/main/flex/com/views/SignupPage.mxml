<?xml version="1.0" encoding="utf-8"?>
<mx:VBox xmlns:mx="http://www.adobe.com/2006/mxml" width="100%" height="100%">
<mx:Script source="../as/SignUp.as"/>
	<mx:Grid id="signUp" width="100%" height="275">
		<mx:GridRow id="heading" width="100%">
			<mx:GridItem>
				<mx:Label text="Signup"/>
			</mx:GridItem>
			<mx:GridItem>
				<mx:Label text="Create you profile here"/>
			</mx:GridItem>
		</mx:GridRow>
		
		<mx:GridRow width="100%">
			<mx:GridItem >
				<mx:Label text="First Name"/>
			</mx:GridItem>
			<mx:GridItem width="100%">
				<mx:TextInput id="firstName" width="15%"/>
			</mx:GridItem>
		</mx:GridRow>
		
		<mx:GridRow width="100%">
			<mx:GridItem >
				<mx:Label text="Middle Name"/>
			</mx:GridItem>
			<mx:GridItem width="100%">
				<mx:TextInput id="middleName" width="15%"/>
			</mx:GridItem>
		</mx:GridRow>
		
		<mx:GridRow width="100%">
			<mx:GridItem >
				<mx:Label text="Last Name"/>
			</mx:GridItem>
			<mx:GridItem width="100%">
				<mx:TextInput id="lastName" width="15%"/>
			</mx:GridItem>
		</mx:GridRow>
		
		<mx:GridRow width="100%">
			<mx:GridItem >
				<mx:Label text="Gender"/>
			</mx:GridItem>
			<mx:GridItem width="100%">
				<mx:ComboBox id="gender" text="" width="25%">
				</mx:ComboBox>
			</mx:GridItem>
		</mx:GridRow>
		
			
		<mx:GridRow width="100%">
			<mx:GridItem >
				<mx:Label text="Date of Birth"/>
			</mx:GridItem>
			<mx:GridItem width="100%">
				<mx:DateField id="dateOfBirth"/>
			</mx:GridItem>
		</mx:GridRow>
		
		<mx:GridRow width="100%">
			<mx:GridItem >
				<mx:Label text="Phone"/>
			</mx:GridItem>
			<mx:GridItem width="100%">
				<mx:TextInput id="Phone" width="15%"/>
			</mx:GridItem>
		</mx:GridRow>
		
		<mx:GridRow width="100%">
			<mx:GridItem >
				<mx:Label text="Username"/>
			</mx:GridItem>
			<mx:GridItem width="100%">
				<mx:TextInput id="userName" width="15%"/>
				<mx:Button id="checkAvailbility" label="Check Availability" width="15%">
					
				</mx:Button>
			</mx:GridItem>
		</mx:GridRow>
		
		<mx:GridRow width="100%">
			<mx:GridItem >
				<mx:Label text="Password"/>
			</mx:GridItem>
			<mx:GridItem width="100%">
				<mx:TextInput id="password" width="15%" />
			</mx:GridItem>
		</mx:GridRow>
	</mx:Grid>
	<mx:HBox width="100%" horizontalAlign="center">
		<mx:Button id="btnCreate" label="Create" width="100"/>
		<mx:Button id="btnReset" label="Reset" width="100"/>
	</mx:HBox>
		
		
		
		
	
</mx:VBox>
