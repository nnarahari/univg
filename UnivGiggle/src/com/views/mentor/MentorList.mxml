<?xml version="1.0" encoding="utf-8"?>
<mx:VBox xmlns:mx="http://www.adobe.com/2006/mxml" width="100%" height="100%" horizontalAlign="center" creationComplete="compInit();" xmlns:mentor="com.views.mentor.*">
<mx:Script source="../../as/mentor/mentorsList.as"/>
<mx:XML id="dp_profession" source="../../../xml/profession.xml" format="e4x" />
<mx:XML id="dp_country" source="../../../xml/country.xml" format="e4x" />
	<mx:VBox>
		<mx:Label text="Mentors List" fontSize="20"/>
	</mx:VBox>
	<mx:VBox>
	<mx:HBox width="100%">
		<mx:Grid id="mentorsListGrid" >	
			<mx:GridRow  width="100%">
				<mx:GridItem >
					<mx:Text text="Country of Citizenship :"/>
				</mx:GridItem>
				<mx:GridItem>
					<mx:ComboBox id="country"  width="150"  dataProvider="{dp_country.country}" labelField="@name" toolTip="{country.text}"/>
				</mx:GridItem>
				<mx:GridItem >
					<mx:Text text="Current Profession :"/>
				</mx:GridItem>
				<mx:GridItem>
					<mx:ComboBox id="profession"  width="150"  dataProvider="{dp_profession.profession}" labelField="@name"  toolTip="{profession.text}"/>
				</mx:GridItem>
			</mx:GridRow>
    </mx:Grid>		
	</mx:HBox>
	</mx:VBox>
	<mx:VBox>
		<mx:DataGrid id="dgMentorList" dataProvider="{mentorsList}" resizableColumns="true">
			<mx:columns>
				<mx:DataGridColumn dataField="firstName" headerText="Firstname" />
				<mx:DataGridColumn dataField="lastName" headerText="Lastname"/>
				<mx:DataGridColumn dataField="citizenship" headerText="Country"/>
				<mx:DataGridColumn dataField="language" headerText="Language"/>
				<mx:DataGridColumn dataField="degree" headerText="Degree"/>
		</mx:columns>
	</mx:DataGrid>
		
	</mx:VBox>
		
</mx:VBox>
