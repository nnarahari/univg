<?xml version="1.0" encoding="utf-8"?>
<mx:VBox xmlns:mx="http://www.adobe.com/2006/mxml" width="100%" height="100%" horizontalAlign="center" 
	creationComplete="compInit();">
<mx:Script source="../../as/mentee/menteeProfileInfo.as"/>
	<mx:HBox width="100%">
		<mx:VBox width="25%" height="100%">
			<mx:Image width="50%" height="50%" source="{_mentee.imagePaths}"/>
		</mx:VBox>
		<mx:Spacer width="10%"/>
		<mx:Form width="75%">
			<mx:FormItem label="First Name:" width="100%">
				<mx:Text id="fname" text="{_mentee.firstName}"/>
			</mx:FormItem>
			<mx:FormItem label="Last Name:" width="100%">
				<mx:Text id="lname" text="{_mentee.lastName}"/>
			</mx:FormItem>
			<mx:FormItem label="Current Profession:" width="100%">
				<mx:Text id="profession" text="{_mentee.profession}"/>
			</mx:FormItem>
			<mx:FormItem label="Location:" width="100%">
				<mx:Text id="location"  text="{_mentee.citizenship}"/>
			</mx:FormItem>
			<mx:FormItem label="Schools/Colleges Attended:" width="100%">
				<mx:Text id="attend" text="{_mentee.schoolCollege}"/>
			</mx:FormItem>
		</mx:Form>
	</mx:HBox>
	<mx:Text id="writeUp" text="{_mentee.description}" width="100%"/>
	<mx:Text id="testimonial" text="{_mentee.testimonial}" width="100%"/>
</mx:VBox>
